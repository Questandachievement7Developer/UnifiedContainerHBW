LoadingIndicator(){
loadindicator(){
while true; do

printf "\x$(printf %x 92)"
printf "\x$(printf %x 8)"
sleep 1
printf "\x$(printf %x 124)"
printf "\x$(printf %x 8)"
sleep 1
printf "\x$(printf %x 47)"
printf "\x$(printf %x 8)"
sleep 1
printf "\x$(printf %x 45)"
printf "\x$(printf %x 8)"
sleep 1
done
}
if [ -z ${loadindicatorPID} ]; then
loadindicator &
export loadindicatorPID=$!
else
kill -9 ${loadindicatorPID}
export loadindicatorPID=""
fi
}

